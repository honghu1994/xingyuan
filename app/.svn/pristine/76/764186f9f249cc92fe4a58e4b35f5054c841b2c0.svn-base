<template>
    <div class="work-status">
        <header-top>
            <div slot="left">
                <img @click="$router.go(-1)" src="@/assets/img/back.png">
            </div>
            <div slot="mid">工作动态</div>
        </header-top>
        <scroll
            class="scroll-content"
            ref="scroll"
            :probe-type='3'
            :pull-up-load="true"
            @pullingup='loadMore'
        >
            <!-- <div class="work-content"> -->
                <router-link class="item" :to="{path:'/workStatus/WorkStatusDetails',query: {id: item.id}}" tag="div" v-for="item in workStatusList" :key="item.id">
                    <h4>{{item.title}}</h4>
                    <!-- <small>{{item.releaseTime}}小时前</small>
                    <p>{{item.source}}</p> -->
                    <div class="content">
                        <img :src="item.headerImage" alt="">
                        <div class="source">
                            <p>{{item.source}}</p>
                            <span>{{item.dynamic_time}}</span>
                        </div>
                    </div>
                </router-link>
            <!-- </div> -->
                <p v-if="isShowMessage" style="text-align:center;color:#666; height:20px;margin-top:5px;font-size:13px;">没有更多数据</p>
        </scroll>
    </div>
</template>

<script>
import HeaderTop from '@/common/Header'
import Scroll from '@/common/Scroll'
// import BScroll from '@better-scroll/core'
export default {
    data(){
        return{
            workStatusList:[],
            nowPage:0,
            pagesCount:1,
            isShowMessage:false
        }
    },
    components:{
        HeaderTop,Scroll
    },
    mounted(){
        this.getWorkStatus()
    },

    methods:{
        getWorkStatus(){
            this.nowPage = this.nowPage + 1
            console.log(this.nowPage)
            this.$http.post('app_Module3/workDynamicsList',{nowpage:this.nowPage}).then(res=>{
                // console.log(res)
                if(res.data.code == 200){
                  console.log(res.data.data.workDynamicsList)
                    this.workStatusList.push(...res.data.data.workDynamicsList)
                    this.pagesCount = res.data.data.page.pageCount
                    setTimeout(()=>{
                      this.$refs.scroll.refresh()
                      this.$refs.scroll.finishPullUp()
                    }, 100);
                }
            })
        },
        loadMore(){
            // console.log('加载更多')
            console.log(this.nowPage)
            console.log(this.pagesCount)
            if( this.nowPage >= this.pagesCount ){
                this.isShowMessage = true
                return
            }
            this.getWorkStatus()
        },
    }

}
</script>

